{
  "name": "qobrix-app",
  "description": "Qobrix VueJS application",
  "scripts": {
    "build:dev": "cross-env NODE_ENV=development webpack --config ./resources/build/webpack.dev.conf.js --progress --hide-modules",
    "build:prod": "cross-env NODE_ENV=production webpack --config ./resources/build/webpack.prod.conf.js --progress --hide-modules",
    "clean": "rimraf ./webroot/dist",
    "watch": "cross-env NODE_ENV=development webpack --config ./resources/build/webpack.hot.conf.js --progress --hide-modules --watch --watch-poll",
    "dev": "yarn build:dev && webpack-dev-server --config ./resources/build/webpack.dev.conf.js",
    "lint:js": "./node_modules/eslint/bin/eslint.js --config ./resources/.eslintrc.js --ext js --ext vue ./resources/src",
    "test": "./node_modules/nightwatch/bin/nightwatch",
    "test:unit": "cross-env BABEL_ENV=test karma start ./resources/test/unit/karma.conf.js --single-run"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "chai": "^3.5.0",
    "chai-dom": "^1.4.0",
    "chromedriver": "^2.31.0",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-vue": "^2.0.0",
    "eslint-plugin-vue": "^2.0.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.4",
    "friendly-errors-webpack-plugin": "^1.6.1",
    "html-webpack-plugin": "^2.28.0",
    "istanbul": "^0.4.5",
    "karma": "^1.7.0",
    "karma-chai-dom": "^1.1.0",
    "karma-chrome-launcher": "^2.1.0",
    "karma-coverage": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "karma-sinon-chai": "^1.3.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-spec-reporter": "^0.0.31",
    "karma-webpack": "^2.0.0",
    "mocha": "^3.5.0",
    "mocha-css": "^1.0.1",
    "nightwatch": "^0.9.16",
    "rimraf": "^2.6.0",
    "sinon": "2.2.0",
    "sinon-chai": "^2.10.0",
    "style-loader": "^0.17.0",
    "uppercamelcase": "^3.0.0",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dashboard": "^1.0.0",
    "webpack-dev-server": "^2.9.1",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bootstrap-datepicker": "^1.8.0",
    "bootstrap-timepicker": "^0.5.2",
    "datatables.net-bs": "^1.10.19",
    "datatables.net-select-bs": "^1.3.0",
    "daterangepicker": "^2.1.27",
    "flag-icon-css": "^3.2.1",
    "icheck": "^1.0.2",
    "inflected": "^2.0.4",
    "node-sass": "^4.9.0",
    "rrule": "^2.2.0",
    "sass-loader": "^7.0.1",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "vue": "^2.5.2",
